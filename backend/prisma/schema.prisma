generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -----------------
// USER MODEL
// -----------------
model User {
  id        String   @id @default(uuid())
  fullName  String
  username  String   @unique
  email     String   @unique
  password  String
  role      Role     @default(USER)

  ips       UserIP[]
  cards     GiftCard[]

  createdAt DateTime @default(now())
}

// -----------------
// USER IP / DEVICE TRACKING
// -----------------
model UserIP {
  id        String   @id @default(uuid())
  userId    String
  ip        String
  device    String
  location  String?
  createdAt DateTime @default(now())

  user      User @relation(fields: [userId], references: [id])
}

// -----------------
// GIFT CARD MODEL
// -----------------
model GiftCard {
  id              String   @id @default(uuid())
  type            String
  value           Float
  currency        String
  country         String

  frontImage      String
  backImage       String

  scratchCode     String?   // extracted after system scratch
  scratchedByUser Boolean   @default(false)
  scratchedByApp  Boolean   @default(false)

  ownerId         String
  owner           User     @relation(fields: [ownerId], references: [id])

  status          CardStatus @default(PENDING)
  storedInAdmin   Boolean    @default(true) // Admin vault mirror

  createdAt       DateTime   @default(now())
}

// -----------------
// ENUMS
// -----------------
enum Role {
  USER
  ADMIN
}

enum CardStatus {
  PENDING
  TRADING
  SOLD
  FAILED
  RECOVERED
}
model GiftCard {
  id              String   @id @default(cuid())
  type            String
  value           Float
  currency        String
  country         String
  frontImage      String
  backImage       String
  scratchCode     String
  scratchedByUser Boolean
  scratchedByApp  Boolean
  ownerId         String
  buyerId         String?   // new: buyer reference
  status          String
  soldAt          DateTime?
  storedInAdmin   Boolean
}

model UserVault {
  id     String @id @default(cuid())
  userId String
  cardId String
}
model Wallet {
  id        String   @id @default(cuid())
  userId    String
  mainBalance Float   @default(0)
  pendingBalance Float @default(0)
  createdAt DateTime @default(now())
}

model Withdrawal {
  id          String   @id @default(cuid())
  userId      String
  amount      Float
  method      String    // "local", "foreign", "USDT"
  accountInfo String    // account number / wallet address
  status      String    @default("PENDING") // PENDING, COMPLETED, FAILED
  createdAt   DateTime  @default(now())
}
