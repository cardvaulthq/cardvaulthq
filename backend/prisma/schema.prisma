model GiftCard {
  id             String     @id @default(uuid())
  type           String
  value          Float
  currency       String
  country        String

  frontImage     String
  backImage      String

  scratchCode    String?    // extracted after system scratch
  scratchedByApp Boolean    @default(false)
  scratchedByUser Boolean   @default(false)

  ownerId        String
  owner          User       @relation(fields: [ownerId], references: [id])

  storedInAdmin  Boolean    @default(true)  // Admin Vault always has it

  status         CardStatus @default(PENDING)

  createdAt      DateTime   @default(now())
}
